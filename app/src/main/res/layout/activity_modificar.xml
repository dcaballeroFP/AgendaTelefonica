<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dcaballero.agendatelefonica.modificar"
    android:id="@+id/agregar_layout">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp">

        <TextView
            android:id="@+id/nombre_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/nombre_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/apellido_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Apellido"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/apellido_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="1" />


        <TextView
            android:id="@+id/edad_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Edad"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/tel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="TÃ©lefono"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/edad_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/telefono_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="3"
            android:layout_column="1"
            android:ems="10"
            android:inputType="phone" />


        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textEmailAddress" />


    </GridLayout>

    <TextView
        android:id="@+id/titulo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Modifique los Datos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />

    <Button
        android:id="@+id/modificar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="modificar_clicked"
        android:text="Modificar" />
</RelativeLayout>