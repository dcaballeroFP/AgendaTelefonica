<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dcaballero.agendatelefonica.eliminar">

    <EditText
        android:id="@+id/modificar_input"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:inputType="phone"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <Button
        android:id="@+id/eliminar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modificar_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:onClick="eliminar_clicked"
        android:text="Eliminar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/titulo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Introduzca el codigo de la persona y pulse eliminar"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="MissingConstraints" />
</RelativeLayout>