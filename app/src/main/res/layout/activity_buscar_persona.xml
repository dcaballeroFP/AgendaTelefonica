<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dcaballero.agendatelefonica.BuscarPersona">

    <ListView
        android:id="@+id/lvlitems"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:layout_below="@+id/id_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/id_txt"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="78dp"
        android:text="Id"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/apellido_txt"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_txt"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/id_txt"
        android:layout_toRightOf="@+id/id_txt"
        android:text="Apellidos"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/nombre_txt"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/apellido_txt"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/apellido_txt"
        android:layout_toRightOf="@+id/apellido_txt"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>